[core]
    editor = vim
    excludesfile = ~/.gitignore
[color]
    ui = auto
[color "branch"]
    current = yellow bold
    local   = green bold
    remote  = cyan bold
[color "diff"]
    meta       = yellow bold
    frag       = magenta bold
    old        = red bold
    new        = green bold
    whitespace = red reverse
[color "status"]
    added      = green bold
    changed    = yellow bold
    untracked  = red bold
[diff]
    tool = tkdiff
[difftool]
    prompt = false
[difftool "tkdiff"]
    cmd = tkdiff $LOCAL $REMOTE&
[github]
    user = bravecompanion

